   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            icon="icons/HolderView.gif"
            class="org.eclipse.rse.tests.framework.ui.TestPerspectiveFactory"
            name="RSE Test Perspective"
            id="org.eclipse.rse.tests.framework.TestPerspective">
         
